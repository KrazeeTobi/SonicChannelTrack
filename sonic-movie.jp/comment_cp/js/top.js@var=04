function splashScreen() {

 Tween24.serial(
	  
	  Tween24.parallel(

	//Tween24.tween("#pc_top_01,#pc_top_05", 1, Ease24._1_SineInOut).opacity(1).delay(0).y(0),
	//Tween24.tween("#slide_a", 1, Ease24._1_SineInOut).opacity(1).delay(0.5).y(0),
	Tween24.tween("#cp_01", 0.5, Ease24._1_SineInOut).opacity(1).delay(0).y(0),
	Tween24.tween("#cp_02", 0.5, Ease24._1_SineInOut).opacity(1).delay(0.5).y(0)
	),
	Tween24.tween("#top-bt", 0.5, Ease24._1_SineInOut).opacity(1).y(0)
		  
).play();
	
};




